<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:elevation="3dp"
        android:orientation="vertical"
        android:translationZ="3dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/customerNameLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verification"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/sms_text"
                    android:gravity="center"
                    android:textSize="16sp"/>





            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/edt_code1"
                        android:textSize="30sp"
                        android:maxLength="1"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:inputType="number"
                        android:layout_height="65dp"
                        android:hint="*"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:id="@+id/edt_code2"
                        android:textSize="30sp"
                        android:maxLength="1"
                        android:layout_marginEnd="5dp"
                        android:layout_width="60dp"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:layout_height="65dp"
                        android:hint="*"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:id="@+id/edt_code3"
                        android:textSize="30sp"
                        android:layout_marginEnd="5dp"
                        android:maxLength="1"
                        android:inputType="number"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:hint="*"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:layout_marginRight="5dp" />

                    <EditText
                        android:id="@+id/edt_code4"
                        android:textSize="30sp"
                        android:maxLength="1"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@android:color/black"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:hint="*"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:layout_marginRight="5dp" />




                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_SendOtpAgain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:gravity="end"
                        android:text="@string/resend_otp_text"
                        android:textSize="14sp" />



                </LinearLayout>


                <Button
                    android:id="@+id/btn_startRoute"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#15d192"
                    android:textColor="@android:color/white"
                    android:text="Submit"/>




            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

