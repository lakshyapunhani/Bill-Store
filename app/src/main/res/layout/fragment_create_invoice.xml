<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e6e4e4"
    tools:context="com.fabuleux.wuntu.billstore.Fragments.MakeBillFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/create_invoice"
            android:gravity="center_vertical"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingEnd="20dp"
            android:paddingRight="30dp"
            style="@style/standard_title_text_style"
            fontPath="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/btn_preview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="4dp"
            android:text="@string/txt_preview"
            android:textAllCaps="true"
            android:background="@drawable/btn_rounded_bg"
            android:textColor="@android:color/white"
            fontPath = "fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_rounded_gray_top_corners">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Invoice Details"
                            android:textColor="@android:color/white"
                            android:gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/txt_select_customer"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_rounded_corner">

                            <com.fabuleux.wuntu.billstore.Dialogs.SearchableSpinner
                                android:id="@+id/customerSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="30dp">
                            </com.fabuleux.wuntu.billstore.Dialogs.SearchableSpinner>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/layout_invoiceDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_delivery_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_invoice_date"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/invoice_date"
                                        android:layout_width="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="wrap_content"
                                        android:text="2018-08-08"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/ic_calendar"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <View
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_dueDate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_due_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/due_date"
                                        android:textSize="12sp"/>

                                    <TextView
                                        android:id="@+id/due_date"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="2018-08-08"
                                        android:textColor="@android:color/black"
                                        android:textSize="14sp"/>

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/ic_calendar"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_rounded_gray_top_corners">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Item Details"
                            android:textColor="@android:color/white"
                            android:gravity="center_vertical"/>

                        <ImageView
                            android:id="@+id/img_addItems"
                            android:padding="7dp"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_plus_circle"/>

                    </LinearLayout>

                    <include layout="@layout/product_header"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_items"
                        android:layout_width="match_parent"
                        android:minHeight="50dp"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_rounded_gray_top_corners">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Billing Details"
                            android:textColor="@android:color/white"
                            android:gravity="center_vertical"/>

                        <ImageView
                            android:id="@+id/img_editTaxes"
                            android:padding="7dp"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_edit_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="Total " />

                        <TextView
                            android:id="@+id/invoice_total"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$10000"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_gst"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="GST" />

                        <TextView
                            android:id="@+id/rate_gst"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="18%"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_cgst"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text="CGST" />

                        <TextView
                            android:id="@+id/rate_cgst"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="9%"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_sgst"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text="SGST" />

                        <TextView
                            android:id="@+id/rate_sgst"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="9%"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_utgst"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text="UTGST" />

                        <TextView
                            android:id="@+id/rate_utgst"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="9%"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_igst"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text="IGST" />

                        <TextView
                            android:id="@+id/rate_igst"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="9%"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_create_shipping"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="Shipping Charges " />

                        <TextView
                            android:id="@+id/txt_shipping_charges"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$50"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_discount"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="Discount" />

                        <TextView
                            android:id="@+id/txt_discount_charges"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$50"
                            android:gravity="end"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_create_roundoff"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="Round off" />

                        <TextView
                            android:id="@+id/txt_roundOff"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$0.5"
                            android:gravity="end"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/grey"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="SubTotal" />

                        <TextView
                            android:textColor="@android:color/black"
                            android:id="@+id/invoice_subTotal"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="$10000"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>