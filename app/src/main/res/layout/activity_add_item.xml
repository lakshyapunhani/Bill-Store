<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Enter Item Details"
            android:paddingLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            style="@style/standard_title_text_style"
            fontPath="fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Add"
            android:textAllCaps="true"
            android:background="@drawable/btn_rounded_bg"
            android:textColor="@android:color/white"
            fontPath = "fonts/OpenSans-Regular.ttf"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/edt_itemName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edt_rounded_corner"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Unit of Sale"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_rounded_corner">

                <Spinner
                    android:id="@+id/unitSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cost per Item"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/edt_costPerItem"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/edt_rounded_corner"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quantity"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/edt_quantity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:background="@drawable/edt_rounded_corner"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_include_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/blue"
                    tools:targetApi="lollipop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Include GST"
                    android:textColor="@color/blue"
                    android:gravity="center"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout_gst"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select GST Rate"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_rounded_corner">
                    <Spinner
                        android:id="@+id/spinner_gst_rate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:spinnerMode="dropdown"
                        android:textSize="12sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="GST Amount"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"/>


                <EditText
                    android:id="@+id/edt_gstAmount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:background="@drawable/edt_rounded_corner"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Cost per Item with GST"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"/>


                <EditText
                    android:id="@+id/edt_costPerItemGST"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:background="@drawable/edt_rounded_corner"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total Amount"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/edt_totalAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/edt_rounded_corner"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

